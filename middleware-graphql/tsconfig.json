{
    "compilerOptions": {
      "module": "commonjs",
      "typeRoots": ["node_modules/@types", "src/@types"],
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "suppressImplicitAnyIndexErrors": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "*": [
          "node_modules/*"
        ]
      }
    },
    "files": ["src/@types/graphql.d.ts"],
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "src/client"
    ]
  }