{
  "name": "nodeapi",
  "version": "1.0.0",
  "description": "Requires node version ^12 to get around mocha's import error.  Conversely, install Mocha 7.1.1 to support earlier versions of node.",
  "main": "src/index.ts",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node",
    "dev": "NODE_ENV=dev ts-node-dev src/index.ts",
    "tddtests": "NODE_ENV=test mocha --require ts-node/register --extensions ts,tsx --watch --watch-files test 'test/**/*.test.ts'",
    "tdd": "mocha --require ts-node/register --extensions ts,tsx --watch --watch-files src 'test/**/*.test.ts'",
    "test": "mocha -r ts-node/register test/**/*.test.ts",
    "lint": "eslint '*/**/*.ts' --quiet --fix"
  },
  "author": "Nu Butthajit",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.20.0",
    "body-parser": "^1.19.0",
    "config": "^3.3.2",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.13",
    "@types/config": "0.0.36",
    "@types/express": "^4.17.6",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.0.5",
    "@types/sinon": "^9.0.8",
    "@types/sinon-chai": "^3.2.5",
    "@types/sinon-express-mock": "^1.3.9",
    "chai": "^4.2.0",
    "mocha": "^8.1.3",
    "sinon": "^9.2.0",
    "sinon-chai": "^3.5.0",
    "sinon-express-mock": "^2.2.1",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslint": "^6.1.2",
    "typescript": "^3.9.3"
  }
}
